<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Authors>Necati Meral</Authors>
		<Description>Hjson configuration provider implementation for Microsoft.Extensions.Configuration.</Description>
		<PackageLicenseUrl>https://github.com/NecatiMeral/Microsoft.Extensions.Configuration.Hjson/blob/master/LICENSE</PackageLicenseUrl>
		<PackageProjectUrl>https://github.com/NecatiMeral/Microsoft.Extensions.Configuration.Hjson</PackageProjectUrl>
		<PackageTags>configuration;hjson</PackageTags>
		<IncludeSymbols>true</IncludeSymbols>
		<IncludeSource>true</IncludeSource>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
		<RepositoryUrl>https://github.com/NecatiMeral/Microsoft.Extensions.Configuration.Hjson</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<Version>1.0.0</Version>
		<RootNamespace>Microsoft.Extensions.Configuration.Hjson</RootNamespace>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Hjson" Version="3.0.0" />
		<PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="3.1.3" />
	</ItemGroup>

</Project>
